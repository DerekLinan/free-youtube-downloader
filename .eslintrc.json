{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true
  },
  "globals": {
    "globalThis": false
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["dist/*", "node_modules/*"],
  "rules": {
    "no-console": 0,
    "no-undef": ["error"],
    "no-proto": ["error"],
    "prefer-arrow-callback": ["warn"],
    "prefer-spread": ["warn"],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["webpack.config.js"] }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      { "js": "always" }
    ]
  }
}
