{
  "manifest_version": 2,
  "name": "Free Youtube Downloader",
  "version": "1.0",

  "description": "Allows for simple and easy downloading of youtube videos",

  "icons": {
    "48": "icons/fyd-48.png",
    "96": "icons/fyd-96.png"
  },

  "browser_action": {
    "default_icon": "icons/fyd-96.png",
    "default_title": "Free Youtube Downloader",
    "default_popup": "popup/youtube-download.html"
  },

  "background": {
    "scripts": ["download-manager.js"]
  },

  "permissions": ["tabs"]
}
